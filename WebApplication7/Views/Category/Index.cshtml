@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">
    <div class="row pt-5">
        <div class="col-6">
            <h2 class="test-primary">Categories</h2>

        </div>
        <div class="col-6 text-end" >
            <a asp-controller="Category" asp-action="CreateNewCat" class="btn btn-primary"><i class="bi bi-file-plus"></i> Create A New Category</a>

        </div>
    </div>

    <br>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                  Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>

            </th>
        </tr>
    </thead>

    <tbody>
        @foreach(var i in Model)
        {
            <tr>
                <td width="50%">
                    @i.Name
                </td>
                <td width="50%">
                    @i.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group"role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@i.Id">Edit</a>

                    </div>
                        <div class="w-75 btn-danger" role="group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@i.Id">Edit</a>

                        </div>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>
