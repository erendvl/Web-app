@model Category


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Create Category
            </h2>
            <hr>
        </div>
        <div>
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger">Name is not valid</span>
        </div>

        <div>
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger">Display Order is not valid</span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary"style="width:150px">

           <i class="bi bi-arrow-return-left"></i>Return To Categories
        </a>
       
    </div>
</form>

@section Scripts
{
    @{
     <partial name="_ValidationScriptsPartial"></partial>    
    }
}
